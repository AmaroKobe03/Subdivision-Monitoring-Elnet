<script>
        document.addEventListener("DOMContentLoaded", function () {
            function setupModal(triggerId, modalId, closeId, removeId = null) {
                const trigger = document.getElementById(triggerId);
                const modal = document.getElementById(modalId);
                const closeBtn = document.getElementById(closeId);
                const removeBtn = removeId ? document.getElementById(removeId) : null;

                if (!trigger || !modal || !closeBtn) {
                    console.error(`${modalId}: Missing elements`);
                    return;
                }

                trigger.addEventListener("click", (e) => {
                    e.preventDefault();
                    modal.classList.remove("hidden");
                });

                closeBtn.addEventListener("click", () => modal.classList.add("hidden"));

                modal.addEventListener("click", (e) => {
                    if (e.target === modal) modal.classList.add("hidden");
                });

                if (removeBtn) {
                    removeBtn.addEventListener("click", () => {
                        modal.classList.add("hidden");
                        console.log(`User removed from ${modalId}`);
                        // Add your remove function here if needed
                    });
                }
            }

            // Ensure the correct IDs are used
            setupModal("viewUserbtn", "view-user", "cancel");
            setupModal("editUserbtn", "edit-user", "cancelEdit");
            setupModal("removeUserbtn", "remove-user", "cancelRemove", "confirmRemove");
        });

</script>
