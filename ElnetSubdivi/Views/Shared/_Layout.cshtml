<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ElnetSubdivi</title>
    <link href="~/css/output.css" rel="stylesheet">

    <link href="~/subdicon.ico" rel="icon" />
    <style>
        html {
        font-family: 'Poppins', sans-serif;
        
        }

        #global-nav {
            display: none;
        }
        #menu a{
            font-size: 15px;
        }
    </style>
</head>
<body class="overflow-hidden">
    @if (ViewBag.HideNav == null || ViewBag.HideNav == false)
    {
        <header id="navigation" class="sticky top-0 z-50 flex h-[5vh] w-full items-center justify-center bg-[#043137] shadow-md">
            <div class="flex w-11/12 items-center justify-between gap-5 p-6 text-[#1E2E33]">

                <button id="menu-btn" class="text-2xl text-white md:hidden">
                    &#9776;
                </button>
                <!-- Logo -->
                <div>
                    <img class="h-10 max-sm:w-[200px] md:h-8" src="~/Images/Logo.svg" alt="Logo">
                </div>

                <!-- Navigation Menu -->
                <div id="menu" class="ml-auto hidden h-[5vh] flex-col items-center gap-6 bg-[#043137] p-6 font-medium text-[22px] md:flex md:flex-row md:gap-8">
                    <a class="cursor-pointer text-white hover:text-[#787676]" href="@Url.Action("UserDash", "Home")">Home</a>
                    <div class="group relative">
                        <a class="flex cursor-pointer flex-row items-center gap-1 text-white hover:text-[#787676]">
                            Facilities
                            <img class="w-[10px] brightness-0 invert-[1]" src="/Images/drdown.svg" />
                        </a>
                        <!-- Dropdown -->
                        <div class="absolute hidden w-40 flex-col rounded-lg bg-white py-2 shadow-lg group-hover:flex">
                            <a href="@Url.Action("FacilityReservation", "Home")" class="px-4 py-2 hover:bg-gray-200">Request</a>
                            <a href="@Url.Action("MyReservation","Home")" class="px-4 py-2 hover:bg-gray-200">My Facilities</a>
                        </div>
                    </div>
                    <a class="cursor-pointer text-white hover:text-[#787676]" href="@Url.Action("serviceRequest", "Home")">Service Request</a>
                    <a class="cursor-pointer text-white hover:text-[#787676]" href="#">Billing</a>
                    <div class="group relative">
                        <a class="tex-white flex cursor-pointer flex-row items-center gap-1 text-white hover:text-[#787676]">
                            Security
                            <img class="w-[10px] brightness-0 invert-[1]" src="~/Images/drdown.svg" />
                        </a>
                        <!-- Dropdown -->
                        <div class="absolute hidden w-40 flex-col rounded-lg bg-white py-2 shadow-lg group-hover:flex">
                            <a href="@Url.Action("FacilityReservation", "Home")" class="color-white px-4 py-2 hover:bg-gray-200">Request</a>
                            <a href="@Url.Action("MyReservation","Home")" class="px-4 py-2 hover:bg-gray-200">My Facilities</a>
                        </div>
                    </div>
                </div>

                <div id="pfp-notif" class="relative flex flex-row items-center justify-center gap-4">
                    <img class="w-[25px] sm:w-[30px]" src="~/Images/bell.svg" />
                    <img class="dropdown-btn relative w-[25px] sm:w-[30px]" src="~/Images/pfp.svg" alt="Profile">

                    <div class="drp-popup fles-col absolute top-10 right-0 flex hidden w-40 flex-col gap-2 rounded-lg bg-white py-2 shadow-lg">
                        <a href="@Url.Action("UserProfile", "Home")" class="px-4 py-2 hover:bg-gray-200">Settings</a>
                        <a href="#" class="px-4 py-2 hover:bg-gray-200">Feedback</a>
                        <a href="#" class="px-4 py-2 hover:bg-gray-200">Calendar</a>
                        <a href="#" class="px-4 py-2 hover:bg-gray-200">Contacts</a>
                        <a href="#" class="px-4 py-2 hover:bg-gray-200">Logout</a>
                    </div>
                </div>

                <!-- Mobile Navigation Menu -->
      
                    <div id="nav-menu" class="absolute top-full right-3 left-0 hidden w-full flex-col items-start justify-start gap-4 bg-[#043137] p-4 text-white transition-all duration-100 md:hidden">
                        <a href="#home" class="block w-full text-left">Home</a>

                        <div class="group relative w-full">
                            <a class="dropdown-btn flex w-full cursor-pointer flex-row items-center gap-1 text-left hover:text-[#787676]">
                                Facilities
                                <img class="w-[10px] brightness-0 invert-[1]" src="~/Images/drdown.svg" />
                            </a>
                            <!-- Dropdown -->
                            <div class="dropdown-menu flex hidden w-full origin-top-left scale-y-0 flex-col rounded-lg py-2 text-white opacity-0 transition-all duration-100 ease-in-out">
                                <a href="@Url.Action("FacilityReservation", "Home")" class="w-full px-4 py-2 text-left hover:bg-gray-200">Request</a>
                                <a href="@Url.Action("MyReservation","Home")" class="w-full px-4 py-2 text-left hover:bg-gray-200">My Facilities</a>
                            </div>
                        </div>

                        <a href="#events-section" class="block w-full text-left">Service Request</a>
                        <a id="sign-in-btn" href="#" class="block w-full text-left">Billing</a>
                        <div class="group relative w-full">
                            <a class="dropdown-btn flex w-full cursor-pointer flex-row items-center gap-1 text-left hover:text-[#787676]">
                                Security
                                <img class="w-[10px] brightness-0 invert" src="~/Images/drdown.svg" />
                            </a>
                            <!-- Dropdown -->
                            <div class="dropdown-menu flex hidden w-full origin-top-left scale-y-0 flex-col rounded-lg py-2 text-white opacity-0 transition-all duration-100 ease-in-out">
                                <a href="@Url.Action("FacilityReservation", "Home")" class="w-full px-4 py-2 text-left hover:bg-gray-200">Request</a>
                                <a href="@Url.Action("MyReservation","Home")" class="w-full px-4 py-2 text-left hover:bg-gray-200">My Facilities</a>
                            </div>
                        </div>
                    </div>
               
            </div>
        </header>

    }

    <div class="flex w-full items-center" >
        <main role="main" class="flex w-full flex-col items-center justify-center bg-[#f2f2f2]">
            @RenderBody()
        </main>
    </div>
    <script src="/js/site.js"></script>
</body>
</html>
