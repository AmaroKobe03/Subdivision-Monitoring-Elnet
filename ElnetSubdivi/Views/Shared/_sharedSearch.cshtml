<div class="mt-10 mr-[3em] mb-10 flex h-[5vh] w-full justify-center">
    <div class="flex w-[85%] items-center justify-between">
        <h1 class="text-center text-4xl text-[#043137]">@ViewData["Title"]</h1>

        @if (ViewData["HideSearch"] == null || !(bool)ViewData["HideSearch"])
        {
            <div class="relative left-7 flex flex-row">
                <div class="relative w-full">
                    <input type="text" placeholder="Search"
                           class="h-10 w-[600px] rounded-full border border-gray-300 bg-white pr-4 pl-12 outline-none focus:ring-2 focus:ring-gray-300">
                    <img class="absolute top-1/2 left-4 h-5 -translate-y-1/2" src="~/Images/find.svg" alt="Search">
                </div>

                <div class="group relative flex flex-row items-center">
                    <img class="w-5" src="~/Images/filter.svg" alt="Filter">
                    <a class="flex cursor-pointer flex-row items-center gap-1 text-base hover:text-[#787676]" href="#about">
                        Filter
                    </a>
                    <!-- Dropdown Content -->
                    <div class="absolute top-6 right-2 hidden w-40 flex-col gap-1 rounded-lg bg-white py-2 shadow-lg group-hover:flex">
                        <a href="#" class="px-4 py-2 hover:bg-gray-200">Availability</a>
                        <a href="#my-facilities" class="px-4 py-2 hover:bg-gray-200">Capacity</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
