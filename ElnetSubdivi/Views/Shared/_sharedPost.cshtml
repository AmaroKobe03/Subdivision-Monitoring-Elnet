<div class="flex items-center gap-3 sm:gap-5">
    <a href="#" id="vid" class="flex items-center gap-1 sm:gap-2">
        <img src="~/Images/strokevid.svg" class="h-4 w-4 sm:h-5 sm:w-5" />
        <span class="text-xs text-gray-700 sm:text-sm">Video</span>
    </a>
    <a href="#" id="pho" class="flex items-center gap-1 sm:gap-2">
        <img src="~/Images/strokepho.svg" class="h-4 w-4 sm:h-5 sm:w-5" />
        <span class="text-xs text-gray-700 sm:text-sm">Photo</span>
    </a>
    <a href="#" id="feel" class="flex items-center gap-1 sm:gap-2">
        <img src="~/Images/strokefeel.svg" class="h-4 w-4 sm:h-5 sm:w-5" />
        <span class="text-xs text-gray-700 sm:text-sm">Feeling/Activity</span>
    </a>

    @if (User.Identity != null && User.Identity.IsAuthenticated && User.Identity.Name == "admin")
    {
        <a href="#" id="poll" class="flex items-center gap-1 sm:gap-2">
            <img src="~/Images/strokepool.svg" class="mb-1 h-4 w-4 sm:h-5 sm:w-5" />
            <span class="text-xs text-gray-700 sm:text-sm">Poll</span>
        </a>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const pollBtn = document.getElementById("poll");
                const popup = document.getElementById("post-popup"); // Ensure this ID exists in your HTML
                if (pollBtn && popup) {
                    pollBtn.addEventListener("click", function () {
                        popup.classList.remove("hidden");
                    });
                }
            });
        </script>
    }
</div>
